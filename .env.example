# Application
APP_ENV=development
APP_NAME=corpord-api
APP_DEBUG=true
TZ=UTC

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=corpord
DB_SSLMODE=disable
DB_MAX_CONNS=10

# HTTP Server
HTTP_PORT=8080
HTTP_READ_TIMEOUT=30s
HTTP_WRITE_TIMEOUT=30s
HTTP_IDLE_TIMEOUT=120s

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=720h  # 30 days
JWT_SIGNING_ALG=HS256
